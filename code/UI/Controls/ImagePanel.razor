@using System;
@using Sandbox;
@using Sandbox.UI;
@inherits Panel

<style>
    ImagePanel {
        background-size: cover;
    }
</style>

<root style="background-image: url(@ImagePath)">

</root>

@code {
    public string ImagePath { get; set; }

    protected override int BuildHash() => HashCode.Combine( ImagePath );
}
